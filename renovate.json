{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["npm"],
  "timezone": "Asia/Shanghai",
  "schedule": ["before 8am on Sunday"],

  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": [],
    "groupName": null
  },

  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    // ğŸ›¡ï¸ é”å®šæ ¸å¿ƒæ¶æ„ï¼šç¦æ­¢è‡ªåŠ¨å‡çº§åˆ° Next.js 15/16
    {
      "matchPackageNames": ["next"],
      "allowedVersions": "<15.0.0"
    },
    // ğŸ›¡ï¸ é”å®šåº•å±‚å¼•æ“ï¼šç¦æ­¢è‡ªåŠ¨å‡çº§åˆ° React 19
    {
      "matchPackageNames": ["react", "react-dom"],
      "allowedVersions": "<19.0.0"
    },
    // ğŸ›¡ï¸ é”å®šæ ·å¼å¼•æ“ï¼šç¦æ­¢è‡ªåŠ¨å‡çº§åˆ° Tailwind CSS v4 åŠå…¶é…å¥—æ’ä»¶
